#!/usr/bin/env node

/**
 * Module dependencies.
 */
require("dotenv").config();
var app = require('../app');
var debug = require('debug')('englrn-backend:server');
var http = require('http');
const cron = require('node-cron');
const moment = require("moment");
require("moment-timezone");

const {sendVocab} = require("../jobs/SendVocab");

const connectDB = require("../config/db");

// Set moment default timezone to +7
moment.tz.setDefault("Asia/Ho_Chi_Minh");



/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);


// Connect MongoDB
connectDB();




// Start a cron job

// Convert cron time  0 7 * * * from UTC to +7 timezone
const convertCronTime = (cronExpression) => {
  const [second,minute, hour, day, month, dayOfWeek] = cronExpression.split(' ');
  const newHour = (parseInt(hour) - 7) % 24;
  return `${second} ${minute} ${newHour} ${day} ${month} ${dayOfWeek}`;
};

const sendDailyWordTask = cron.schedule(convertCronTime('0 0 7 * * *'), () => {
  // console.log('Cron job running every minute at', new Date().toLocaleTimeString());
  sendVocab();
});

const taskStatus = sendDailyWordTask.getStatus();
const nextRun = sendDailyWordTask.getNextRun();
console.log(`Cron job status: ${taskStatus}, next run at: ${nextRun}`);




/**
 * Create HTTP server.
 */

var server = http.createServer(app);

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
  console.log(`ðŸš€ Server running on port ${port}`);
}
